    //

// elements
.title
    font-weight: bold
    font-size: 13px
    line-height: 15px
    color: #333

.container
    padding-left: 10px

.item
    margin-top: 13px

.link
    font-size: 13px
    line-height: 15px
    text-decoration: none
    color: #5e8fd5

    &:hover
        text-decoration: underline

.expandLink
    font-size: 13px
    line-height: 15px
    text-decoration: none
    color: #5e8fd5
    cursor: pointer
    border-bottom: 1px dotted #5e8fd5

    &:hover
        border: none

// modifiers
.root_type_bordered
    border: 1px dashed #ccc
    padding: 20px

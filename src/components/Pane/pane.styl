.root
    background: #fff
    height: 100%
    width: 100%
    border-left: 1px solid #ccc
    box-sizing: border-box
    position: relative

// elements
.layer
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: #fff
    padding: 20px
    overflow: auto

.title
    text-align: center
    font-size: 20px
    color: #444
    margin-bottom: 20px

.menuEditContainer
    margin-bottom: 30px

.imageEditContainer
    margin-bottom: 30px

.presetContainer
    display: flex
    height: 90px
    margin-bottom: 20px
    padding: 5px
    box-sizing: border-box
    border: 1px solid #ddd
    border-radius: 4px
    background-color: #fafafa
    cursor: pointer
    user-select: none

    &:hover
        box-shadow: 1px 1px 3px 1px #eee

    &:active
        position: relative
        top: 2px
        box-shadow: 0 0 3px 3px #eee inset

    @media screen and (min-width: 1800px)
        display: inline-flex
        width: calc(50% - 10px)
        vertical-align: top

        &:nth-child(odd)
            margin-left: 20px


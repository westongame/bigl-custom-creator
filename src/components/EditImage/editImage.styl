.root
    display: flex
    width: 100%
    align-items: center

// elements
.input
    display: none

.imgContainer
    display: flex
    width: 25%
    height: 90px
    flex-shrink: 0
    padding: 5px
    background-color: #eee
    cursor: pointer

.textContainer
    display: table-cell
    vertical-align: middle
    padding-left: 15px

.title
    font-size: 15px
    color: #555
    margin-bottom: 10px

.link
    font-size: 13px
    line-height: 15px
    color: #5e8fd5
    text-decoration: underline
    cursor: pointer
    user-select: none

    &:hover
        text-decoration: none

// modifiers

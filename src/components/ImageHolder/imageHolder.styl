.root
    display: flex
    width: 100%
    box-sizing: border-box
    align-items: center

// elements
.img
    max-width: 100%
    max-height: 100%
    margin: auto

.placeholder
    width: 80%
    height: 120px
    max-height: 100%
    padding: 5% 0
    margin: auto
    box-sizing: border-box

    @media screen and (min-width: 1200px)
        height: 180px

    @media screen and (min-width: 1600px)
        height: 220px

// modifiers
.root_type_bordered
    border: 1px dashed #ccc

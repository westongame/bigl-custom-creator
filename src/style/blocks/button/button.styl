:local
    .button
        display: inline-block
        vertical-align: middle
        height: 34px
        background: dimgrey
        border-radius: 4px
        padding: 0 20px
        color: #fff
        font-size: 13px
        line-height: 34px
        cursor: pointer
        transition: opacity .1s
        user-select: none

        &:hover
            opacity: .9

        &:active
            box-shadow: inset 0 3px 5px rgba(0,0,0,.125)
            line-height: 36px

:local
    .pane__presetContainer
        border: 1px solid #ddd
        border-radius: 4px
        margin-bottom: 10px
        cursor: pointer
        padding: 5px
        user-select: none

        &:hover
            box-shadow: 1px 1px 3px 1px #eee

        &:active
            box-shadow: 0 0 1px 1px #eee inset
            padding-top: 6px
            padding-bottom: 4px
